<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <it.mdev.sharedservices.design.CircularImageView
                android:id="@+id/Picture_iv"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:padding="5dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/red"
                android:layout_gravity="center"
                android:src="@drawable/ic_profile_r"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/Name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textStyle="bold|italic"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Size_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/Location_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/Date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/DateComplete_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/Demand_btn"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="@string/demand"
            android:textAllCaps="false"
            android:background="@color/red"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/Complete_btn"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="@string/complete"
            android:textAllCaps="false"
            android:background="@color/red"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/UserMain_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="left"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:layout_marginBottom="10dip" />

        <ListView
            android:id="@+id/UserCopy_lv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"/>
    </LinearLayout>
</LinearLayout>